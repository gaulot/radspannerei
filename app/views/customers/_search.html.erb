<div id="search_mask">
  <%= form_tag customers_path, :method => 'get' do %>
    <div>
      <%= text_field_tag :search,  params[:search]%>
      <%= submit_tag t(:search, :scope => [:customer, :index]), :id => 'searchsubmit', :name => nil %>
    </div>
    <p><%=t :search_term, :scope => [:customer, :index] %></p>
  <% end %>
</div>


